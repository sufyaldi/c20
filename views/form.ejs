<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BREAD (Browse, Read, Edit, Add, Delete)</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/util.js"></script>
</head>

<body>
    <div class="container">
        <h1>Updating Data</h1>
        <form action="" method="post">
            <div class="inner">
                <div class="form-group">
                    <label for="name">Name</label>
                    <div class="col-75">
                        <input type="text" id="name" name="name" placeholder="insert your name" value="<%= data.name %>"
                            required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="height">Height</label>
                    <div class="col-75">
                        <input type="number" id="height" name="height" placeholder="insert your height"
                            value="<%= data.height %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="weight">Weight</label>
                    <div class="col-75">
                        <input type="number" step="0.001" id="weight" name="weight" placeholder="insert your weight"
                            value="<%= data.weight %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="birth">Birth date</label>
                    <div class="col-75">
                        <input type="date" id="birth" name="birth" value="<%= data.birthdate %>" required>
                    </div>
                </div>
                <div class="radio-group">
                    <legend>Is Married</legend>
                    <div class="select">
                        <% if(!data.married) { %>
                            <div class="option">
                                <input type="radio" id="false" name="married" value="0" required checked>
                                <label for="false">Not Yet</label>
                            </div>
                            <div class="option">
                                <input type="radio" id="true" name="married" value="1">
                                <label for="true">Yes</label>
                            </div>
                            <% } else { %>
                                <div class="option">
                                    <input type="radio" id="false" name="married" value="0">
                                    <label for="false">Not Yet</label>
                                </div>
                                <div class="option">
                                    <input type="radio" id="true" name="married" value="1" checked>
                                    <label for="true">Yes</label>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>
            <div class="buttonform">
                <input type="submit" value="Save" />
                <a href="/">Back</a>
            </div>
        </form>
    </div>
</body>

</html>
